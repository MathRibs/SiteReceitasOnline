<h1 class="pb-4">Categorias</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">/ Categorias</li>
    </ol>
  </nav>

<div class="row row-cols-2 row-cols-lg-5 g2 g-lg-3 mb-4">
 <% if(categories != '') { %>
    <% categories.forEach(function(categoria,index){%>  
<a href="categories/<%- categoria.nome %> " class="col text-center categorias_link">
    <div class="categorias_img shadow">
        <img src="imagens/<%-categoria.imagem %> " alt="<% categoria.nome %> " loading="lazy">
    </div>
    <div class="pt-1"><%- categoria.nome %> </div>
</a>
<% }) %> 
<% } %> 
</div>
