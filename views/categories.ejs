<h1 class="pb-4">Categorias</h1>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/categories">/ Categorias</a></li>
    <li class="breadcrumb-item active" aria-current="page">/Categorias</li>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g2 g-lg-3 mb-4">
  <% if(typeof categories !=='undefined' && categories.length> 0) { %>
    <% categories.forEach(function(categoria,index){%>
      <a href="categories/<%- categoria.nome %> " class="col text-center categorias_link">
        <div class="categorias_img shadow">
          <img src="imagens/<%-categoria.imagem %> " alt="<% categoria.nome %> " loading="lazy">
        </div>
        <div class="pt-1">
          <%- categoria.nome %>
        </div>
      </a>
      <% }) %>
        <% } %>
</div>




<div class="row row-cols-2  row-cols-lg-5 g-2 g-lg-3">

  <% if (typeof categoriesID !=='undefined' && categoriesID.length> 0) { %>
    <% categoriesID.forEach(function(receita,index) { %>
      <a href="/receita/<%= receita._id %> " class="col text-center categorias_link">
        <div class="categorias_img  categorias_img-maior shadow">
          <img class="personalizado" src="/imagens/<%=receita.image %> " alt="<%= receita.nome %> " laading="lazy">
        </div>
        <div class="pt-1">
          <%= receita.nome%>
        </div>
      </a>
      <% }) %>
        <% } %>
</div>