
<% if(receitinha != null) { %> 
<div class="backgroundzinsuave">
    
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%- receitinha.nome %></li>
          
        </ol>
      </nav>


<div class="row">
    <div class="col-12 col-md-4">
        <img src="/imagens/<%- receitinha.image %>" style="top: 100px;"  class="img-fluid sticky-top rounded"  alt="<%- receitinha.nome %>" loading="lazy">
    </div>

    <div class="col-12 col-md-8">
        <div class="row">
            <div class="col-12"><h1> <%- receitinha.nome %></h1></div>
            <div class="col-12 mb-4"> <img class="tagpng" src="/imagens/tag.png" alt=""><b> categoria: <%-receitinha.categoria %></b></div>
            <div class="col-12 mb-4"><b>Postado por: <%-receitinha.email %></b></div>

            <div class="col-12" style="white-space: pre-line;">
                <h4>Modo de Preparo</h4>
                <%- receitinha.descricao%>
                </div>
           

        </div>
        <div class="row pt-4">
            <div class="col-12">
                <h3>Ingredientes</h3>
                <ul class="list-group font-weight-bold list-group-flush">
                    <% receitinha.ingredientes.forEach(function(ingredientes, index){ %>
                        <li class="list-group-item"><%=ingredientes%> </li> 
                       <% }) %> 
                </ul>
            </div>
        </div>  
        
        <button class="btnzinstyle1"><a class="btnzinstylelink" href="/receita/<%= receitinha._id%>/deletar">DELETAR</a></button>
        <button class="btnzinstyle1"><a class="btnzinstylelink" href="/update?id=<%= receitinha._id%>">ATUALIZAR</a></button>

    </div>
</div>












</div>

<% } %> 